<Window x:Class="LessonWPF_19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LessonWPF_19"
        xmlns:vm="clr-namespace:LessonWPF_19.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding Path=Number1}"/>
        <Button Content="Рассчитать длину окружности" 
                Command="{Binding Path=LengthCommand}"/>
        <TextBox Text="{Binding Path=Number2}"/>
    </StackPanel>
</Window>